{{!
    @template mod_learningmap/rendercontainer

    Template for the container the learningmap is being rendered into.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * cmId The course module id of this learningmap
    * isIntro If this is being rendered as intro in the course or in separate view page

    Example context (json):
    {
        "cmId": "123",
        "enableLiveUpdater": true,
        "contentbeforemap": "<p>Some content before the map</p>",
        "hascontentbeforemap": true,
        "mapcontent": "<svg>...</svg>",
        "usemodal": true,
        "inmodal": false,
        "available": true,
        "title": "Learningmap title"
    }
}}
<div class="learningmap-container">
  {{#hascontentbeforemap}}
  <div class="learningmap-content-before-map">
    {{{contentbeforemap}}}
  </div>
  {{/hascontentbeforemap}}
  {{#available}}
  <div id="learningmap-render-container-{{cmId}}{{#inmodal}}-modal{{/inmodal}}" class="learningmap-render-container">
    {{^mapcontent}}{{> mod_learningmap/loadingplaceholder}}{{/mapcontent}}
    {{{mapcontent}}}
  </div>
  {{/available}}
  {{^available}}
  {{#str}} learningmapnotavailable, mod_learningmap, {{title}} {{/str}}
  {{/available}}
</div>
{{#js}}
{{#available}}
  {{^mapcontent}}
  require(['mod_learningmap/renderer'], function(renderer) {
    renderer.init({{cmId}}, {{inmodal}});
  });
  {{/mapcontent}}
  {{#usemodal}}
  require(['mod_learningmap/linkmodal'], function(linkmodal) {
    linkmodal.init({{cmId}}, {{inmodal}});
  });
  {{/usemodal}}
  {{#enableLiveUpdater}}
      require(['mod_learningmap/initliveupdater'], function(initliveupdater) {
        initliveupdater.init({{cmId}}, {{inmodal}});
      });
  {{/enableLiveUpdater}}
{{/available}}
{{/js}}
