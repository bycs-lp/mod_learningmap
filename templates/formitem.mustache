{{!
    @template mod_learningmap/formitem

    Template for the form item containing the editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    "sections":[
      {
         "name":"Section 0",
         "coursemodules":[
            {
               "id":"1039",
               "name":"Activity 1"
            },
            {
               "id":"1040",
               "name":"Activity 2"
            }
         ]
      },
      {
         "name":"Section 1",
         "coursemodules":[
            {
               "id":"1043",
               "name":"Activity 3"
            }
         ]
      }
    ],
    "help":"This is the help text",
    "completiondisabled":"false",
    "features" : [
            {
                "name": "showtext",
                "title": "Show activity names",
                "text": "This option shows the names of the activities as a text besides the places. The text can be moved and is automatically updated when the name changes.",
                "alt": "Help"
            },
            {
                "name": "slicemode",
                "title": "Reveal map with places",
                "text": "This option subsequently reveals the map when new places become reachable. The hidden parts of the map are covered with fog. When all places become reachable, the whole map is visible.",
                "alt": "Help"
            }
        ]
    }
}}
{{#completiondisabled}}<div class="alert alert-danger row">{{#str}} completiondisabled, learningmap {{/str}}</div>{{/completiondisabled}}
<div class="form-group row fitem" id="mod_learningmap_editor">
    <div class="col-md-3 col-form-label d-flex pb-0 pr-md-0">
        <label class="d-inline word-break">{{#str}} learningmap, learningmap {{/str}}</label>
        <div class="form-label-addon d-flex align-items-center align-self-start">{{{ help }}}</div>
    </div>
    <div class="col-md-9 form-inline align-items-start felement">
        <div class="learningmap-menubar container border-left border-top border-right border-dark">
            <div class="row m-1">
                <div class="col">
                    <label for="learningmap-place-settings-icon">{{#str}} places, learningmap {{/str}}</label>
                    <div id="learningmap-place-settings-icon">
                        <svg id="learningmap-svgmap-preview" -xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg" version="1.1" baseProfile="full">
                        <defs>
                            <pattern id="transparent-background" x="0" y="0" width="8" height="8" patternUnits="userSpaceOnUse">
                                <path fill="#000000" fill-rule="evenodd" d="M0 0h4v4H0V0zm4 4h4v4H4V4z"/>
                            </pattern>
                        </defs>
                            <style id="learningmap-preview-svgstyle">
                            </style>
                            <circle class="learningmap-place-background" cx="15" cy="15" r="10" fill="url(#transparent-background)" fill-opacity="0.4"/>
                            <circle class="learningmap-place learningmap-reachable" cx="15" cy="15" r="10" title="unvisited"/>
                            <circle class="learningmap-place-background" cx="40" cy="15" r="10" fill="url(#transparent-background)" fill-opacity="0.4"/>
                            <circle class="learningmap-place learningmap-visited" cx="40" cy="15" r="10" title="visited"/>
                            <rect x2="70" y2="25" height="6" y="12" width="14" x="58"></rect>
                            <path class="learningmap-path learningmap-reachable" d="M60 15 L70 15" stroke-linecap="round"/>
                            <text class="learningmap-text-group learningmap-visible" x="80" y="20" font-size="20">A</text>
                        </svg>
                    </div>
                </div>
                <div class="col-sm text-right">
                    <i class="fa fa-cog" id="learningmap-advanced-settings-icon"></i>
                </div>
            </div>
        </div>
        <div class="learningmap-editor-main">
            {{> mod_learningmap/activityselector }}
            {{> mod_learningmap/advancedsettings }}
            {{> mod_learningmap/placesettings }}
            <div class="learningmap-mapcontainer learningmap-scaling-svg-container" id="learningmap-editor-map">
            </div>
        </div>
    </div>
</div>
